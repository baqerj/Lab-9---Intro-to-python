#GFXHAT import
from gfxhat import lcd
#while x and y
def displayObject(obj,x,y):
    while(x < 0 or y < 0 or x > 127 or y > 63):
        if(x < 0):
            x = 128+x
        if(y < 0):
            y = 64+y
        if(x > 127):
            x = x-128
        if(y > 63):
            y = y-63
#for loop
for lines in obj:
    for dots in lines:
        if(dots == 1):
                lcd.set_pixel(theX,theY,1)
                lcd.show()
        theY += 1
        if(theY > 63):
            theY = 0
        theX = x
         theX += 1
        if(theX > 127):
                theX = 0
        theX = x

